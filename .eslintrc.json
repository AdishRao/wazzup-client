{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    //"plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "plugin:react-hooks/recommended",
    "plugin:cypress/recommended",
    "prettier"
  ],
  "rules": {
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0
  },
  "plugins": [
    "react",
    "import",
    "testing-library",
    "cypress"
  ], // "jsx-a11y" "jsx-a11y" is for accessibility
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jxs": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}